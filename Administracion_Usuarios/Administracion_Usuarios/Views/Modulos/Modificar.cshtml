@model Administracion_Usuarios.Models.EditModuloViewModel

@{
    ViewData["Title"] = "Modificar Módulo";
}

<h1>Modificar Módulo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Modificar">
            <input type="hidden" asp-for="ModuloCategorias" />
            <input type="hidden" asp-for="Id" />
