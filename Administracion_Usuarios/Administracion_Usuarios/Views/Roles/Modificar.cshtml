@model Administracion_Usuarios.Models.AgregarModificarRolViewModel
@{
    ViewData["Title"] = "Modificar Rol";
}

<h1>Modificar Rol</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Modificar">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Estado" value="true" id="est_activo">
                    <label class="form-check-label" for="est_activo">
                        Activo
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Estado" value="false" id="est_inactivo">
                    <label class="form-check-label" for="est_inactivo">
                        Inactivo
                    </label>
                </div>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <partial name="_Rol" />
            <div class="form-group mt-4">
                <input type="submit" value="Modificar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }



    }